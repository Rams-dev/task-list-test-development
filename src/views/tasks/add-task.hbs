<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1>Add task</h1>
            </div>
            <div class="card-body">
                <form action="/task/add" method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" placeholder="title"  value="{{title}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="5" class="form-control" placeholder="description">{{description}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="person">Task manager</label>
                        {{!-- <input type="text" name="person" id="person" placeholder="task manager" value="{{person}}" class="form-control"> --}}
                        <select name="person" id="person" class="form-control">
                            {{#each query}}
                             <option value="{{id}}">{{name}}</option>
                            {{/each}}

                        </select> 
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Add task</button>
                </form>
            </div>
        </div>
    </div>
</div>


