<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1>Edit task</h1>
            </div>
            <div class="card-body">
                <form action="/task/edit/{{#each tasks}}{{ id }}{{/each}}" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" placeholder="title" value="{{#each tasks}}{{ title }}{{/each}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="5" class="form-control" placeholder="description">{{#each tasks}}{{ description }}{{/each}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="person">Task manager</label>
                        <input type="text" name="person" id="person" placeholder="task manager" value="{{#each tasks}}{{ id_person }}{{/each}}" class="form-control">
                        {{!-- <select name="person" id="person" class="form-control"> --}}
                            {{!-- <option value=""></option> --}}
                        {{!-- </select> --}}
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Edit task</button>
                </form>
            </div>
        </div>
    </div>
</div>
